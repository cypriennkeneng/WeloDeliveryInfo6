{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_ordernumber_container %}
    {{ parent() }}

    {% if page.product.weloDeliveryInformation.active %}
        {% block welo_delivery_info_frontend_detail_delivery_information %}
            <div class="row product-detail-ordernumber-container">
                <ul>
                    {% for item in page.product.weloDeliveryInformation.deliveryData %}
                        <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endblock %}
    {% endif %}
{% endblock %}

